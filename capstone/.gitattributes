# Git LFS tracking for large files
*.csv filter=lfs diff=lfs merge=lfs -text
*.zip filter=lfs diff=lfs merge=lfs -text
*.gz filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.parquet filter=lfs diff=lfs merge=lfs -text
*.feather filter=lfs diff=lfs merge=lfs -text
*.h5 filter=lfs diff=lfs merge=lfs -text
*.hdf5 filter=lfs diff=lfs merge=lfs -text
*.pkl filter=lfs diff=lfs merge=lfs -text
*.pickle filter=lfs diff=lfs merge=lfs -text

# Specific large output files
spd_census_joined.csv filter=lfs diff=lfs merge=lfs -text
spd_crimes_with_demographics.csv filter=lfs diff=lfs merge=lfs -text
king_county_tracts_crime_demographics.csv filter=lfs diff=lfs merge=lfs -text

# Model files
*.model filter=lfs diff=lfs merge=lfs -text
*.joblib filter=lfs diff=lfs merge=lfs -text
*.sav filter=lfs diff=lfs merge=lfs -text

# Shapefile components
*.shp filter=lfs diff=lfs merge=lfs -text
*.dbf filter=lfs diff=lfs merge=lfs -text

# Image files (if large)
*.png filter=lfs diff=lfs merge=lfs -text
*.jpg filter=lfs diff=lfs merge=lfs -text
*.jpeg filter=lfs diff=lfs merge=lfs -text

# Text files should remain as regular Git files
*.txt text
*.md text
*.py text
*.ipynb text
*.json text
*.yml text
*.yaml text
*.xml text
*.html text
*.css text
*.js text

# Line ending normalization
* text=auto
*.py text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
